{
  "parser": "babel-eslint",
  // "extends": [
  //   "standard",
  //   "standard-react"
  // ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser": true
  },
  "globals": {
    "__ENV__": true,
    "__TEST__": false,
    "__PROD__": false,
    "__COVERAGE__": false
  },
  "rules": {
    "key-spacing": "off",
    // "jsx-quotes": [
    //   2,
    //   "prefer-single"
    // ],
    // "max-len"              : [2, 120, 2],
    //"object-curly-spacing" : [2, "always"],
    "comma-dangle": "off",
    "no-alert": 1,
    "no-empty": 1,
    // "react/jsx-no-bind"    : 1,
    "semi": [
      2,
      "always"
    ]
  }
}